</head>
<%= render 'layouts/header' %>
<body>
  <div class="container" style="margin-bottom: 50px">
    <div class="row">
      <h1 class="text-center">Assessment Application</h1>

      <!--<div class="panel panel-group panel-default" style="margin: 12px" role="tablist" aria-multiselectable="true">-->
      <div class="panel-group" id="accordion" style="margin: 12px" role="tablist" aria-multiselectable="true">
        <!--<div class="panel-heading">!!Some valuable information here!!</div>-->
        <!--<div class="panel-body">-->
          <%= form_for(:session, url: assessment_save_path) do |f| %>
              <h3 class="text-center" id="cultureInquiry">Community Culture Inquiry</h3>
              <!--<h4>Physical Environment of a Community</h4>-->
              <div class="panel panel-default" style="border: 0;" id="panel1">
                <div class="panel-heading" role="tab" id="heading1">
                  <h4 class="panel-title">
                    <a id="physicalEnvironment" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                      Physical Environment of a Community
                    </a>
                  </h4>
                </div>
                <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="heading1">
                  <div class="panel-body">
                    <h4 class="text-center" style="background: gainsboro">Spatial dimensions</h4>
                    <!--<h4 class="text-center">Boundaries, size, and distribution</h4>-->
                    <%= f.label "Square miles of the community" %>
                    <%= f.text_field :community_square_miles, value: @assessment.community_square_miles, class: 'form-control', placeholder: "Square Miles", type: "number", min: "0", step: "any"%>

                    <!--<h4 class="text-center">Regional position</h4>-->
                    <div class="row" style="margin: 3px ;">
                      <%= f.label "Is it?" %>
                      <div class="btn-group" data-toggle="buttons">
                        <label class="btn btn-default">
                          <%= f.label :urban_rural, 'Urban', :value => 'Urban' %>
                          <%= f.radio_button :urban_rural, 'Urban'%>
                        </label>
                        <label class="btn btn-default">
                          <%= f.label :urban_rural, 'Rural', :value => 'Rural' %>
                          <%= f.radio_button :urban_rural, 'Rural'%>
                        </label>
                      </div>
                    </div>
                    <div class="row" style="margin: 3px ;">
                      <%= f.label "Is it?" %>
                      <div class="btn-group" data-toggle="buttons">
                        <label class="btn btn-default">
                          <% if @assessment.town_village == 'Town' %>
                              <%= f.label :town_village, 'Town', :value => 'Town', class: 'active' %>
                          <% else %>
                              <%= f.label :town_village, 'Town', :value => 'Town' %>
                          <% end %>
                          <%= f.radio_button :town_village, 'Town'%>
                        </label>
                        <label class="btn btn-default">
                          <% if @assessment.town_village == 'Country' %>
                              <%= f.label :town_village, 'County', :value => 'County', class: 'active' %>
                          <% else %>
                              <%= f.label :town_village, 'County', :value => 'County' %>
                          <% end %>
                          <%= f.radio_button :town_village, 'County'%>
                        </label>
                        <label class="btn btn-default">
                          <% if @assessment.town_village == 'Village' %>
                              <%= f.label :town_village, 'Village', :value => 'Village', class: 'active' %>
                          <% else %>
                              <%= f.label :town_village, 'Village', :value => 'Village' %>
                          <% end %>
                          <%= f.radio_button :town_village, 'Village'%>
                        </label>
                        <label class="btn btn-default">
                          <% if @assessment.town_village.eql? 'Part of a municipality' %>
                              <%= f.label :town_village, 'Part of a municipality', :value => 'Part of a municipality', class: 'active' %>
                          <% else %>
                              <%= f.label :town_village, 'Part of a municipality', :value => 'Part of a municipality' %>
                          <% end %>
                          <%= f.radio_button :town_village, 'Part of a municipality'%>
                        </label>
                      </div>
                    </div>
                    <%= f.label "Identify Distance to... (in miles)" %>
                    <%= f.text_field :distance_other_community, value: @assessment.distance_other_community, class: 'form-control', placeholder: "... other communities", type: "number", min: "0", step: "any"%>
                    <%= f.text_field :distance_capital, value: @assessment.distance_capital, class: 'form-control', placeholder: "... Capital", type: "number", min: "0", step: "any"%>
                    <%= f.label "List and describe local news source and relationship to geo-political units" %>
                    <%= f.text_area :local_news_source, value: @assessment.local_news_source, class: 'form-control'%>

                    <%= f.label "Please describe other Regional Position features that are not described above" %>
                    <%= f.text_area :other_regional_position_features, value: @assessment.other_regional_position_features, class: 'form-control'%>

                    <!--<h4 class="text-center">Geophysical and climate factors</h4>-->
                    <%= f.label "Please describe Natural features of the environment (e.g. waterways, mountains, plains, hills, deserts, coastal)" %>
                    <%= f.text_area :natural_features, value: @assessment.natural_features, class: 'form-control'%>

                    <%= f.label "Climate conditions throughout the year" %>
                    <%= f.text_area :climate_conditions, value: @assessment.climate_conditions, class: 'form-control'%>

                    <%= f.label "Human-made features (e.g. superhighways, high-rise apartments/condos, industrial parks, bridges, tunnels, shopping malls, sports arenas etc)" %>
                    <%= f.text_area :human_made_features, value: @assessment.human_made_features, class: 'form-control'%>

                    <%= f.label "Please describe other geophysical and climate factors features that are not described above" %>
                    <%= f.text_area :other_geophysical_features, value: @assessment.other_geophysical_features, class: 'form-control'%>

                    <!--<h4 class="text-center">Land use</h4>-->
                    <%= f.label "Designated: residential, recreational, commercial, industrial, agricultural, official, spiritual, religious etc." %>
                    <%= f.text_area :land_use_designated, value: @assessment.land_use_designated, class: 'form-control'%>

                    <%= f.label "Patterns of use: used by all members of the community, used by specific community members." %>
                    <%= f.text_area :land_use_patterns, value: @assessment.land_use_patterns, class: 'form-control'%>

                    <%= f.label "Please describe other land use features that are not described above" %>
                    <%= f.text_area :other_land_use_features, value: @assessment.other_land_use_features, class: 'form-control'%>

                    <%= f.label "Housing" %>
                    <%= f.text_area :housing, value: @assessment.housing, class: 'form-control'%>

                    <%= f.label "Transportation" %>
                    <%= f.text_area :transportation, value: @assessment.transportation, class: 'form-control'%>

                    <%= f.label "Communication" %>
                    <%= f.text_area :communication, value: @assessment.communication, class: 'form-control'%>

                    <%= f.label "Mental Maps" %>
                    <%= f.text_area :mental_maps, value: @assessment.mental_maps, class: 'form-control'%>

                    <h4 class="text-center" style="background: gainsboro">Temporal (yearly, monthly, weekly, daily working calendars and schedules)</h4>
                  </div>
                </div>
              </div>

              <!--<h4>Population of a Community</h4>-->
              <div class="panel panel-default" style="border: 0;">
                <div class="panel-heading" role="tab" id="heading2">
                  <h4 class="panel-title">
                    <a id="communityPopulation" class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                      Population of a Community
                    </a>
                  </h4>
                </div>
                <div id="collapseTwo" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="heading2">
                  <div class="panel-body">
                    <%= f.label "Young population" %>
                    <%= f.text_field :young_population, value: @assessment.young_population, class: 'form-control', placeholder: "Number of young population", type: "number", min: "0", step: "any"%>
                    <%= f.label "Adult population" %>
                    <%= f.text_field :adult_population, value: @assessment.adult_population, class: 'form-control', placeholder: "Number of adult population", type: "number", min: "0", step: "any"%>
                    <%= f.label "Elder population" %>
                    <%= f.text_field :elder_population, value: @assessment.elder_population, class: 'form-control', placeholder: "Number of elder population", type: "number", min: "0", step: "any"%>
                    <%= f.label "Male population" %>
                    <%= f.text_field :male_population, value: @assessment.male_population, class: 'form-control', placeholder: "Number of male population", type: "number", min: "0", step: "any"%>
                    <%= f.label "Female population" %>
                    <%= f.text_field :female_population, value: @assessment.female_population, class: 'form-control', placeholder: "Number of female population", type: "number", min: "0", step: "any"%>

                    <%= f.label "Ethnic and racial groups" %>
                    <%= f.text_area :ethnical_racial_groups, value: @assessment.ethnical_racial_groups, class: 'form-control'%>

                    <%= f.label "Income Average" %>
                    <%= f.text_field :income_average, value: @assessment.income_average, class: 'form-control', placeholder: "Income Average", type: "number", min: "0"%>

                    <%= f.label "Education Level" %>
                    <%= f.text_area :education_levels, value: @assessment.education_levels, class: 'form-control'%>

                    <%= f.label "Residential and household characteristics" %>
                    <%= f.text_area :residential_household_characteristics, value: @assessment.residential_household_characteristics, class: 'form-control'%>
                  </div>
                </div>
              </div>

              <!--<h4>Social Organization of a Community</h4>-->
              <div class="panel panel-default" style="border: 0;">
                <div class="panel-heading" role="tab" id="heading3">
                  <h4 class="panel-title">
                    <a id="communityOrganization" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                      Social Organization of a Community
                    </a>
                  </h4>
                </div>
                <div id="collapseThree" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="heading3">
                  <div class="panel-body">
                    <h4 class="text-center" style="background: gainsboro">Community institutions</h4>

                    <%= f.label "Economic institutions" %>
                    <%= f.text_area :economic_institutions, value: @assessment.economic_institutions, class: 'form-control'%>

                    <%= f.label "Government institutions" %>
                    <%= f.text_area :government_institutions, value: @assessment.government_institutions, class: 'form-control'%>

                    <%= f.label 'Domestic Institutions' %>
                    <%= f.text_area :domestic_institutions, value: @assessment.domestic_institutions, class: 'form-control'%>

                    <%= f.label 'Religion Institutions' %>
                    <%= f.text_area :religion_institutions, value: @assessment.religion_institutions, class: 'form-control'%>

                    <%= f.label 'Recreation Institutions' %>
                    <%= f.text_area :recreation_institutions, value: @assessment.recreation_institutions, class: 'form-control'%>

                    <%= f.label 'Voluntary Institutions' %>
                    <%= f.text_area :voluntary_institutions, value: @assessment.voluntary_institutions, class: 'form-control'%>
                  </div>
                </div>
              </div>

              <h3 class="text-center" id="healthAssessment">Community Health Assessment</h3>

              <!--<h4>Environmental Health of a Community</h4>-->
              <div class="panel panel-default" style="border: 0;">
                <div class="panel-heading" role="tab" id="heading2">
                  <h4 class="panel-title">
                    <a id="communityEnvironmentalHealth" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseFour" aria-expanded="false" aria-controls="collapseOne">
                      Environmental Health of a Community
                    </a>
                  </h4>
                </div>
                <div id="collapseFour" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="heading2">
                  <div class="panel-body">
                    <%= f.label 'Outdoor air quality' %>
                    <%= f.text_area :outdoor_air_quality, value: @assessment.outdoor_air_quality, class: 'form-control'%>

                    <%= f.label 'Surface and ground-water quality' %>
                    <%= f.text_area :surface_ground_water_quality, value: @assessment.surface_ground_water_quality, class: 'form-control'%>

                    <%= f.label 'Food contamination' %>
                    <%= f.text_area :food_contamination, value: @assessment.food_contamination, class: 'form-control'%>

                    <%= f.label 'Noise pollution' %>
                    <%= f.text_area :noise_pollution, value: @assessment.noise_pollution, class: 'form-control'%>

                    <%= f.label 'Disease vectors' %>
                    <%= f.text_area :disease_vectors, value: @assessment.disease_vectors, class: 'form-control'%>

                    <%= f.label 'Disaster preparedness' %>
                    <%= f.text_area :disaster_preparedness, value: @assessment.disaster_preparedness, class: 'form-control'%>

                    <%= f.label 'Crime' %>
                    <%= f.text_area :crime, value: @assessment.crime, class: 'form-control'%>

                    <%= f.label 'Accidents' %>
                    <%= f.text_area :accidents, value: @assessment.accidents, class: 'form-control'%>

                    <%= f.label 'Home Communities' %>
                    <%= f.text_area :homes_communities, value: @assessment.homes_communities, class: 'form-control'%>

                    <%= f.label 'Community Buildings' %>
                    <%= f.text_area :community_buildings, value: @assessment.community_buildings, class: 'form-control'%>

                    <%= f.label 'Energy Management' %>
                    <%= f.text_area :energy_management, value: @assessment.energy_management, class: 'form-control'%>

                    <%= f.label 'Global Health' %>
                    <%= f.text_area :global_health, value: @assessment.global_health, class: 'form-control'%>

                    <h4 class="text-center" style="background: gainsboro">Toxic substances and hazardous-waste management</h4>
                    <%= f.label 'Solid waste management' %>
                    <%= f.text_area :solid_waste_management, value: @assessment.solid_waste_management, class: 'form-control'%>

                    <%= f.label 'Sewage Management' %>
                    <%= f.text_area :sewage_management, value: @assessment.sewage_management, class: 'form-control'%>

                    <%= f.label 'Radioactive waste Management' %>
                    <%= f.text_area :radioactive_waste_management, value: @assessment.radioactive_waste_management, class: 'form-control'%>

                    <%= f.label 'Chemical Pesticides Management' %>
                    <%= f.text_area :chemical_pesticides_management, value: @assessment.chemical_pesticides_management, class: 'form-control'%>
                  </div>
                </div>
              </div>

              <!--<h4>Populational Health of a Community</h4>-->
              <div class="panel panel-default" style="border: 0;">
                <div class="panel-heading" role="tab" id="heading2">
                  <h4 class="panel-title">
                    <a id="communityPopulationalHealth" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseFive" aria-expanded="false" aria-controls="collapseOne">
                      Populational Health of a Community
                    </a>
                  </h4>
                </div>
                <div id="collapseFive" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="heading2">
                  <div class="panel-body">
                    <%= f.label 'Infectious Diseases' %>
                    <%= f.text_area :infectious_diseases, value: @assessment.infectious_diseases, class: 'form-control'%>

                    <%= f.label 'Chronic Diseases' %>
                    <%= f.text_area :chronic_diseases, value: @assessment.chronic_diseases, class: 'form-control'%>

                    <%= f.label 'Chronic Disability' %>
                    <%= f.text_area :chronic_disability, value: @assessment.chronic_disability, class: 'form-control'%>

                    <%= f.label 'Behavioral and mental health' %>
                    <%= f.text_area :behavioral_mental_health, value: @assessment.behavioral_mental_health, class: 'form-control'%>

                    <%= f.label 'Maternal, infant, and child health' %>
                    <%= f.text_area :maternal_infant_health, value: @assessment.maternal_infant_health, class: 'form-control'%>

                    <%= f.label 'Early and middle-childhood health' %>
                    <%= f.text_area :childhood_health, value: @assessment.childhood_health, class: 'form-control'%>

                    <%= f.label 'Adolescent health' %>
                    <%= f.text_area :adolescent_health, value: @assessment.adolescent_health, class: 'form-control'%>

                    <%= f.label 'Older-adult health' %>
                    <%= f.text_area :older_adult_health, value: @assessment.older_adult_health, class: 'form-control'%>

                    <%= f.label 'Lesbian, gay, bisexual, and transgender health' %>
                    <%= f.text_area :lgbt_health, value: @assessment.lgbt_health, class: 'form-control'%>

                    <%= f.label 'Occupational safety and health' %>
                    <%= f.text_area :occupational_safety_health, value: @assessment.occupational_safety_health, class: 'form-control'%>

                    <%= f.label 'Population health behaviors' %>
                    <%= f.text_area :population_health_behaviors, value: @assessment.population_health_behaviors, class: 'form-control'%>
                  </div>
                </div>
              </div>

              <!--<h4>Healthcare Organization: Institutional and Ideological Dimensions</h4>-->
              <div class="panel panel-default" style="border: 0;">
                <div class="panel-heading" role="tab" id="heading2">
                  <h4 class="panel-title">
                    <a id="healthcareOrganization" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseSix" aria-expanded="false" aria-controls="collapseOne">
                      Healthcare Organization: Institutional and Ideological Dimensions
                    </a>
                  </h4>
                </div>
                <div id="collapseSix" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="heading2">
                  <div class="panel-body">
                    <%= f.label 'Public health financing' %>
                    <%= f.text_area :public_health_financing, value: @assessment.public_health_financing, class: 'form-control'%>

                    <%= f.label 'Indigenous and alternative health systems' %>
                    <%= f.text_area :indigenous_alternative_health_systems, value: @assessment.indigenous_alternative_health_systems, class: 'form-control'%>

                    <h4 class="text-center" style="background: gainsboro">Health workforce</h4>
                    <%= f.label 'Nursing' %>
                    <%= f.text_area :nursing, value: @assessment.nursing, class: 'form-control'%>

                    <%= f.label 'Medical' %>
                    <%= f.text_area :medical, value: @assessment.medical, class: 'form-control'%>

                    <%= f.label 'Dental' %>
                    <%= f.text_area :dental, value: @assessment.dental, class: 'form-control'%>

                    <%= f.label 'Social work' %>
                    <%= f.text_area :social_work, value: @assessment.social_work, class: 'form-control'%>

                    <%= f.label 'Mental health' %>
                    <%= f.text_area :mental_health, value: @assessment.mental_health, class: 'form-control'%>

                    <%= f.label 'Nutrition' %>
                    <%= f.text_area :nutrition, value: @assessment.nutrition, class: 'form-control'%>

                    <%= f.label 'Optical/Audiology' %>
                    <%= f.text_area :optical_audiology_health, value: @assessment.optical_audiology_health, class: 'form-control'%>

                    <%= f.label 'Therapies, such as physical, occupational, speech' %>
                    <%= f.text_area :therapies, value: @assessment.therapies, class: 'form-control'%>

                    <h4 class="text-center" style="background: gainsboro">Public health agencies</h4>
                    <%= f.label 'Health departments' %>
                    <%= f.text_area :health_departments, value: @assessment.health_departments, class: 'form-control'%>

                    <%= f.label 'Hospitals' %>
                    <%= f.text_area :personal_healthcare_hospitals, value: @assessment.personal_healthcare_hospitals, class: 'form-control'%>

                    <%= f.label 'Nursing homes, extended-care facilities, assisted living' %>
                    <%= f.text_area :personal_healthcare_assisted_living, value: @assessment.personal_healthcare_assisted_living, class: 'form-control'%>

                    <%= f.label 'Home-health agencies' %>
                    <%= f.text_area :personal_healthcare_home_health, value: @assessment.personal_healthcare_home_health, class: 'form-control'%>

                    <%= f.label 'Freestanding ambulatory facilities' %>
                    <%= f.text_area :personal_healthcare_ambulatory, value: @assessment.personal_healthcare_ambulatory, class: 'form-control'%>

                    <%= f.label 'Health planning agencies' %>
                    <%= f.text_area :health_planning_agencies, value: @assessment.health_planning_agencies, class: 'form-control'%>

                    <h4 class="text-center" style="background: gainsboro">Public health financing</h4>
                    <%= f.label 'Commercial third-party payers' %>
                    <%= f.text_area :third_payers_commercial, value: @assessment.third_payers_commercial, class: 'form-control'%>

                    <%= f.label 'Government third-party payers' %>
                    <%= f.text_area :third_payers_government, value: @assessment.third_payers_government, class: 'form-control'%>

                    <%= f.label 'Self-pay Financing' %>
                    <%= f.text_area :self_pay_financing, value: @assessment.self_pay_financing, class: 'form-control'%>

                    <%= f.label 'Charity Financing' %>
                    <%= f.text_area :charity_financing, value: @assessment.charity_financing, class: 'form-control'%>

                    <%= f.label 'Public Assistance Financing' %>
                    <%= f.text_area :public_assistance_financing, value: @assessment.public_assistance_financing, class: 'form-control'%>

                    <h4 class="text-center" style="background: gainsboro">Health values and beliefs</h4>
                    <%= f.label 'Customs' %>
                    <%= f.text_area :customs_health_values, value: @assessment.customs_health_values, class: 'form-control'%>

                    <%= f.label 'Traditions' %>
                    <%= f.text_area :traditions_health_values, value: @assessment.traditions_health_values, class: 'form-control'%>

                    <%= f.label 'Values' %>
                    <%= f.text_area :values_health_values, value: @assessment.values_health_values, class: 'form-control'%>

                  </div>
                </div>
              </div>
            <div class="text-right">
              <%= f.submit "Save", class: "btn btn-success" %>
              <% end %>
            </div>


      </div>
    </div>
    <div class="navbar navbar-fixed-bottom bottom-menu">
      <ul class="nav nav-pills" data-offset-bottom="0">
        <li role="presentation">
        <li role="presentation" class="dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
            Culture <span class="caret"></span>
          </a>
          <ul class="dropdown-menu">
            <li><a href="#physicalEnvironment">Physical Environment of a Community</a></li>
            <li><a href="#communityPopulation">Population of a Community</a></li>
            <li><a href="#communityOrganization">Social Organization of a Community</a></li>
          </ul>
        </li>
        </li>
        <li role="presentation">
          <li role="presentation" class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
              Health <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <li><a href="#communityEnvironmentalHealth">Environmental Health of a Community</a></li>
              <li><a href="#communityPopulationalHealth">Populational Health of a Community</a></li>
              <li><a href="#healthcareOrganization">Healthcare Organization: Institutional and Ideological Dimensions</a></li>
            </ul>
          </li>
        </li>
      </ul>
    </div>

  </div>
</body>
</html>


